<div class="row">
  <div class="col-md-8 col-md-offset-1 col-sm-10 col-sm-offset-1">
    <h3><%= answers.count %>件の回答</h3>
  </div>
</div>
<% answers.each do |answer| %>
  <% unless answer.id.nil? %>
    <div class="row">
      <div class="col-md-1 col-md-offset-1 col-sm-1 col-sm-offset-1 text-center">
        <%= render partial: "votes/vote_answer", locals: {answer: answer} %>
      </div>
      <div class="col-md-7 col-sm-9">
        <div>
          <%= markdown(answer.content).html_safe %>
        </div>
        <p>回答者：<%= answer.user.name %></p>
        <hr>
      </div>
    </div>
  <% end %>
<% end %>
