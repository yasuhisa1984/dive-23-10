<div class="row align-items-center">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-style-01-original">
      <h1>プロフィールを編集</h1>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'application/display_simple_form_error', form_error: f.error_notification %>
        <div class="form-group">
          <%= f.input :name,  input_html: { class: "form-control"}, placeholder: "名前" %>
        </div>
        <div class="form-group">
          <%= f.input :email, autofocus: false, input_html: { class: "form-control"}, placeholder: "メールアドレス" %>
        </div>

        <hr>

        <p><strong>※パスワード変更する場合に入力してください。</strong></p>
        <div class="form-group">
          <%= f.input :password, autocomplete: "off",input_html: { class: "form-control"}, placeholder: "パスワード" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= @minimum_password_length %> 文字以上で入力してください。</small>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.input :password_confirmation, autocomplete: "off", label:"変更パスワード確認" ,input_html: { class: "form-control"}, placeholder: "変更パスワード確認" %>
        </div>

        <hr>

        <div class="form-group">
          <%= f.input :current_password, autocomplete: "off", input_html: {class: "form-control"}, placeholder: "現在のパスワード" %>
        </div>

        <div class="form-group">
          <label>プロフィール画像</label>
          <% if profile_img(@user) %>
            <p><span class="img-profile-wrap-default-original"><%= profile_img(@user) %></span></p>
          <% end %>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        </div>

        <div class="form-group">
          <%= f.input :profile, label:"自己紹介", input_html: {class: "form-control",size: "60x10"} %>
        </div>

        <p class="text-center">
          <%= f.submit "更新", class: "btn btn-success btn-w-320-original" %>
        </p>
      <% end %>
    </div>

    <div class="panel panel-default panel-bg-style-original">
      <div class="panel-body">
        <p>アカウントを削除</p>
        <p><%= button_to "削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
      </div>
    </div>
  </div>
</div>