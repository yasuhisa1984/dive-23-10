<h1>タグ付けされた質問/h1>
<div id="tag_space">
  <span class="tag" ><%= @tag.name %></span>
</div>

<% @tags.each_with_index do |tag, i| %>
  <div class="row">
    <div class="col-md-2 col-sm-2">
      <%= render partial: "questions/additional_infomation", locals: {question: tag} %>
    </div>
    <div class="col-md-10 col-sm-10">
      <p>
        <%= link_to question_path(tag) do %><%= tag.title %><% end %>
      </p>
      <ul class="list-inline">
        <li class="pull-left">
          <%= render partial: "tags/tag_list", locals: {tags: tag.tags} %>
        </li>
        <li class="pull-right">
          更新日時 :<%= date_japan(tag.updated_at) %>
          <%= link_to user_path(tag.user) do %><%= tag.user.name %><% end %>
        </li>
      </ul>
    </div>
    <div class="col-md-12 col-sm-12">
      <hr>
    </div>
  </div>
<% end %>
